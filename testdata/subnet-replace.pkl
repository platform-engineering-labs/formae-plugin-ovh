amends "@formae/forma.pkl"

import "@ovh/network/network.pkl"
import "@ovh/network/subnet.pkl"

import "./vars.pkl" as v

forma {
  v.stack
  v.target

  // Define the private network that this subnet belongs to
  // Must specify region to ensure it's activated before subnet creation
  local testNetwork = new network.NetworkResolvable{
    label = "plugin-sdk-test-network"
    stack = v.stack.Label
  }
  testNetwork

  // Replace the subnet - change CreateOnly property (cidr)
  new subnet.Subnet {
    label = "plugin-sdk-test-subnet"
    name = "formae-plugin-sdk-test-subnet-\(v.testRunID)-replaced"
    network_id = testNetwork.id
    cidr = "10.0.4.0/24"  // Changed CIDR - requires replacement
    ipVersion = 4
    enableDhcp = true
    enableGatewayIp = true
    dnsNameServers {
      "8.8.8.8"
      "8.8.4.4"
    }
  }
}
