amends "@formae/forma.pkl"

import "@ovh/volume/volume.pkl"

import "./vars.pkl" as v

forma {
  v.stack
  v.target

  new volume.Volume {
    label = "plugin-sdk-test-volume"
    name = "formae-plugin-sdk-test-\(v.testRunID)"
    description = "Test volume for plugin SDK tests"
    size = 20  // Changed from 10 to 20 - this is CreateOnly, should trigger replacement
  }
}
