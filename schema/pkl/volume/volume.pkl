module volume

import "@formae/formae.pkl"
import "../ovh.pkl"

const type = "OVH::Volume::Volume"

@ovh.ResourceHint {
  type = module.type
  identifier = "id"
}
open class Volume extends formae.Resource {
  @ovh.FieldHint {
    required = false
  }
  name: String?

  @ovh.FieldHint {
    required = false
  }
  description: String?

  @ovh.FieldHint {
    required = true
    createOnly = true
  }
  size: Int

  @ovh.FieldHint {
    required = false
    createOnly = true
  }
  availability_zone: String?

  @ovh.FieldHint {
    required = false
    createOnly = true
  }
  volume_type: String?

  // id is computed by OpenStack - not user-provided
  // status is computed by OpenStack - not user-provided
}
